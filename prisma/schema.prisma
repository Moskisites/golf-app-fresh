generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GolfCourse {
  id          Int      @id @default(autoincrement())
  name        String
  location    String
  holes       Int
  par         Int
  difficulty  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GolfRound {
  id          Int      @id @default(autoincrement())
  courseId    Int
  date        DateTime
  score       Int
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
